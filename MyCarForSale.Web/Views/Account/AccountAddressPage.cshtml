                <div class="mb-4 items-start">
                    <label asp-for="Country">Country</label>
                    <input asp-for="Country" class="w-full appearance-none rounded border px-3 py-2 text-sm leading-tight text-gray-700 outline outline-2 outline-gray-200 focus:outline-none" autocomplete="on" list="" type="text" value="@Model.Country" disabled/>
                </div>
                <span asp-validation-for="Country" class="font-semibold text-red-600"></span>
                
                <div class="flex flex-row gap-7">
                    <div class="mb-4 flex flex-shrink flex-grow flex-col items-start">
                        <label asp-for="Province">Province</label>
                        <datalist id="provinceValue">
