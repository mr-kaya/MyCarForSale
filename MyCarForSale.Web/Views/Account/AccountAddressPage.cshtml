                <div class="mb-4 items-start">
                    <label asp-for="FullAddress">Full Address</label>
                    <textarea asp-for="FullAddress" class="h-20 w-full resize-none appearance-none rounded border px-3 py-2 text-sm leading-tight text-gray-700 outline outline-2 outline-gray-200 focus:outline-none" maxlength="254" type="text">@Model.FullAddress</textarea>
