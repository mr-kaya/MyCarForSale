                    <span asp-validation-for="Province" class="text-red-600 font-semibold"></span>
                    
                    <div class="mb-4 flex flex-shrink flex-grow flex-col items-start">
                        <label asp-for="District">District</label>
                        <datalist id="districtValue">
                            <option value="Efeler">Efeler</option>
                            <option value="Germencik">Germencik</option>
                            <option value="İncirliova">İncirliova</option>
                            <option value="Kuşadası">Kuşadası</option>
