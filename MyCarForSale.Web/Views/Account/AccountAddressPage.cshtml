                        </datalist>
                        <input asp-for="Province" class="w-full appearance-none rounded border px-3 py-2 text-sm leading-tight text-gray-700 outline outline-2 outline-gray-200 focus:outline-none" autocomplete="on" list="provinceValue" type="text" value="@Model.Province"/>
