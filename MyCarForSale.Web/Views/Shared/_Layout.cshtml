@using MyCarForSale.Web.Controllers
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - MyCarForSale.Web</title>
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true"/>
    <!-- SweetAlert2 CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">

</head>
<body class="overflow-y-scroll">
<header class="bg-white">
    <div>
        <nav class="border-gray-200 px-2 mx-10 py-5 bg-white z-50">
            <div class="container mx-auto flex flex-wrap items-center justify-between">
                <div class="flex justify-between md:order-1">
                    <a class="flex" asp-controller="Home" asp-action="Index">
                        <svg class="h-10 mr-3" width="51" height="70" viewBox="0 0 51 70" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <g clip-path="url(#clip0)">
                                <path d="M1 53H27.9022C40.6587 53 51 42.7025 51 30H24.0978C11.3412 30 1 40.2975 1 53Z" fill="#76A9FA"></path><path d="M-0.876544 32.1644L-0.876544 66.411C11.9849 66.411 22.4111 55.9847 22.4111 43.1233L22.4111 8.87674C10.1196 8.98051 0.518714 19.5571 -0.876544 32.1644Z" fill="#A4CAFE"></path><path d="M50 5H23.0978C10.3413 5 0 15.2975 0 28H26.9022C39.6588 28 50 17.7025 50 5Z" fill="#1C64F2"></path>
                            </g>
                            <defs>
                                <clipPath id="clip0">
                                    <rect width="51" height="70" fill="white"></rect>
                                </clipPath>
                            </defs>
                        </svg>
                        <span class="self-center text-lg font-semibold whitespace-nowrap">MyCarForSale</span>
                    </a>
                    <div class="hidden md:flex justify-between items-center w-full md:w-auto md:order-1 ml-4 mt-1" id="mobile-menu-3">
                        <ul class="flex-col md:flex-row flex md:space-x-8 mt-4 md:mt-0 md:text-sm md:font-medium">
                            <li>
                                <a class="text-gray-700 hover:bg-gray-50 border-b border-gray-100 md:hover:bg-transparent md:border-0 block pl-3 pr-4 py-2 md:hover:text-blue-700 md:p-0" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li>
                                <a class="text-gray-700 hover:bg-gray-50 border-b border-gray-100 md:hover:bg-transparent md:border-0 block pl-3 pr-4 py-2 md:hover:text-blue-700 md:p-0" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="flex justify-between md:order-2">
                    <div class="relative mr-3 md:mr-0 hidden md:block">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <svg class="w-5 h-5 text-gray-500" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd"></path>
                            </svg>
                        </div>
                        <input type="text" id="search" oninput="SearchAll(this.value)" class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full pl-10 p-2" placeholder="Search...">
                        <div style="display: none" id="resultBase" class="fixed bottom-0 inset-x-0 top-16 z-30 flex items-center justify-center backdrop-blur">
                            <div id="result" class="overflow-auto divide-y flex flex-col max-h-80 w-auto bg-white rounded-[7px] gap-4 p-4"></div>
                        </div>
                    </div>
                    <button data-collapse-toggle="mobile-menu-3" type="button" class="md:hidden text-gray-400 hover:text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-300 rounded-lg inline-flex items-center justify-center" aria-controls="mobile-menu-3" aria-expanded="false">
                        <span class="sr-only">Open main menu</span>
                        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 15a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"></path>
                        </svg>
                        <svg class="hidden w-6 h-6" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                        </svg>
                    </button>
                </div>
                <div class="flex justify-between md:order-3">
                    <div class="hidden md:flex justify-between items-center w-full md:w-auto" id="mobile-menu-4">
                        <ul class="flex-col md:flex-row flex items-center md:space-x-8 mt-4 md:mt-0 md:text-sm md:font-medium">
                            @if (UserController.TokenKey != null)
                            {
                                <li>
                                    <a class="text-black hover:bg-gray-200 border-b border-gray-300 md:hover:bg-transparent md:border-0 block md:hover:text-blue-700 md:p-0" asp-area="" asp-controller="Account" asp-action="AccountDetailsPage">Account</a>
                                </li>
                                <li>
                                    <label class="text-2xl font-semibold text-blue-600">/</label>
                                </li>
                                <li>
                                    <a asp-controller="Favorites" asp-action="MyFavoritesPage" class="text-black hover:bg-gray-200 border-b border-gray-300 md:hover:bg-transparent md:border-0 block md:hover:text-blue-700 md:p-0" asp-area="">Favorites</a>
                                </li>
                                <li>
                                    <label class="text-2xl font-semibold text-blue-600">/</label>
                                </li>
                                <li>
                                    <a class="text-black hover:bg-gray-200 border-b border-gray-300 md:hover:bg-transparent md:border-0 block md:hover:text-blue-700 md:p-0" asp-area="" asp-controller="MyCars" asp-action="PostCarPage">Post a vehicle ad</a>
                                </li>
                                <li>
                                    <label class="text-2xl font-semibold text-blue-600">/</label>
                                </li>
                                <li>
                                    <a id="logout" class="text-red-600 hover:text-red-800 border-b border-gray-300 md:hover:bg-transparent md:border-0 block" asp-area="" asp-controller="User" asp-action="LogoutAccount">Logout</a>
                                </li>
                            }
                            else
                            {
                                <li>
                                    <a class="text-black hover:bg-gray-200 border-b border-gray-300 md:hover:bg-transparent md:border-0 block md:hover:text-blue-700 md:p-0" asp-area="" asp-controller="User" asp-action="LoginAccountPage">Sign In</a>
                                </li>
                                <li>
                                    <label class="text-2xl font-semibold text-blue-600">/</label>
                                </li>
                                <li>
                                    <a class="text-black hover:bg-gray-200 border-b border-gray-300 md:hover:bg-transparent md:border-0 block md:hover:text-blue-700 md:p-0" asp-area="" asp-controller="User" asp-action="RegisterAccountPage">Sign Up</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </div>
</header>
<div class="mx-auto flex flex-wrap justify-center z-0">
    <div class="">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
</div>
<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2024 - MyCarForSale.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<!-- SweetAlert2 JavaScript -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    function rowClick(id) {
        document.querySelector("a#CarDetailsHref_"+id).click();
    }
</script>


<script type="text/javascript">
    function SearchAll(data) {
        var value = {"data": data}
        $.ajax({
             url: "@Url.Action("SearchAll", "Home")",
             data: value,
             method: "POST",
             beforeSend: function () {
                document.getElementById("result").innerHTML = '';
             },
             success: function (data) {
                 result = '';
                 if (data.length !== 0) {
                     console.log(data);
                    
                     for (var i=0; i<data.length; i++) {
                        if (data[i].carImagesEntities.length > 0) {
                            document.getElementById("resultBase").style.display = "flex";
                            document.body.style.overflow = 'hidden';
                            
                            result = result + "<div onclick='rowClick("+data[i].id+")' class='cursor-pointer flex items-center justify-start gap-2'>"+
                                                    "<a class='hidden' href='/Home/CarId/"+data[i].id+"' id='CarDetailsHref_"+data[i].id+"'></a>"+
                                                    "<img class='w-28' src='"+data[i].carImagesEntities[0].carImageUrl+"' alt='image'>"+
                                                    "<div class='flex flex-col gap-2'>"+
                                                        "<div class='flex items-center justify-start gap-2 text-sm font-bold tracking-wide'>"+data[i].advertisementName+"</div>"+
                                                        "<div class='flex items-center justify-center gap-2'>"+
                                                            "<div class='text-sm font-semibold'> "+data[i].mainClassificationEntityCarBrand+" </div>"+
                                                            "<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 64 64' width='16' height='16'><path d='M33.094 32.004L17.374 5.004 27.374 5.004 49 32 27.374 59.004 17.374 59.004z' fill='#4B5563'></path></svg>"+
                                                            "<div class='text-sm font-semibold'>"+data[i].mainClassificationEntityCarModel+"</div>"+
                                                            "<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 64 64' width='16' height='16'><path d='M33.094 32.004L17.374 5.004 27.374 5.004 49 32 27.374 59.004 17.374 59.004z' fill='#4B5563'></path></svg>"+
                                                            "<div class='text-sm font-semibold'>"+data[i].mainClassificationEntityCarPackage+"</div>"+
                                                            "<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 64 64' width='16' height='16'><path d='M33.094 32.004L17.374 5.004 27.374 5.004 49 32 27.374 59.004 17.374 59.004z' fill='#4B5563'></path></svg>"+
                                                            "<div class='text-sm font-semibold'>"+data[i].mainClassificationEntityCarYear+"</div>"+
                                                        "</div>"+
                                                    "</div>"+
                                                "</div>";
                        }
                        else {
                            result = result + "<div onclick='rowClick("+data[i].id+")' class='cursor-pointer flex items-center justify-start gap-2'>"+
                                                    "<a class='hidden' href='/Home/CarId/"+data[i].id+"' id='CarDetailsHref_"+data[i].id+"'></a>"+
                                                    "<img class='w-28' src='https://ik.imagekit.io/mycarforsale/BASEIMAGE.jpeg?updatedAt=1706283464011' alt='image'>"+
                                                    "<div class='flex flex-col gap-2'>"+
                                                        "<div class='flex items-center justify-start gap-2 text-sm font-bold tracking-wide'>"+data[i].advertisementName+"</div>"+
                                                        "<div class='flex items-center justify-center gap-2'>"+
                                                            "<div class='text-sm font-semibold'> "+data[i].mainClassificationEntityCarBrand+" </div>"+
                                                            "<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 64 64' width='16' height='16'><path d='M33.094 32.004L17.374 5.004 27.374 5.004 49 32 27.374 59.004 17.374 59.004z' fill='#4B5563'></path></svg>"+
                                                            "<div class='text-sm font-semibold'>"+data[i].mainClassificationEntityCarModel+"</div>"+
                                                            "<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 64 64' width='16' height='16'><path d='M33.094 32.004L17.374 5.004 27.374 5.004 49 32 27.374 59.004 17.374 59.004z' fill='#4B5563'></path></svg>"+
                                                            "<div class='text-sm font-semibold'>"+data[i].mainClassificationEntityCarPackage+"</div>"+
                                                            "<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 64 64' width='16' height='16'><path d='M33.094 32.004L17.374 5.004 27.374 5.004 49 32 27.374 59.004 17.374 59.004z' fill='#4B5563'></path></svg>"+
                                                            "<div class='text-sm font-semibold'>"+data[i].mainClassificationEntityCarYear+"</div>"+
                                                        "</div>"+
                                                    "</div>"+
                                                "</div>";
                        }
                     }
                     document.getElementById("result").innerHTML = result;
                 }
                 else {
                     document.getElementById("resultBase").style.display = "none";
                     document.body.style.overflow = '';
                 }
             }
        });
    }
</script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>